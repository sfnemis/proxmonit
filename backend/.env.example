# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/proxmonx

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Default Admin User
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=Admin@123

# Proxmox API Configuration
# Multiple clusters can be configured by adding PROXMOX_CLUSTER_1, PROXMOX_CLUSTER_2, etc.
PROXMOX_CLUSTER_1_NAME=Main Cluster
PROXMOX_CLUSTER_1_HOST=https://your-proxmox-server:8006
PROXMOX_CLUSTER_1_USER=monitoring@pam
PROXMOX_CLUSTER_1_TOKEN_NAME=your_token_name
PROXMOX_CLUSTER_1_TOKEN_VALUE=your_token_value
PROXMOX_CLUSTER_1_VERIFY_SSL=false

# Email Notifications
EMAIL_ENABLED=false
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=alerts@example.com
EMAIL_PASSWORD=your_smtp_password
EMAIL_FROM=alerts@example.com
EMAIL_RECIPIENTS=admin@example.com,user@example.com

# Discord Notifications
DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Telegram Notifications
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Gotify Notifications
GOTIFY_ENABLED=false
GOTIFY_SERVER_URL=https://gotify.example.com
GOTIFY_APP_TOKEN=your_gotify_app_token

# Metrics Collection
METRICS_COLLECTION_ENABLED=true
METRICS_COLLECTION_INTERVAL=5 # in minutes
METRICS_RETENTION_DAYS=90